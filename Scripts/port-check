#!/bin/sh -e


##########################################################################
#   Function description:
#       Pause until user presses return
##########################################################################

pause()
{
    local junk
    
    printf "Press return to continue..."
    read junk
}

printf "Remove distfile? y/[n] "
read distclean
if [ 0$distclean = 0y ]; then
    make distclean
else
    make clean
fi
portlint -AC
pause
make deinstall
make rmconfig
make reinstall
make check-plist
make stage-qa
make clean
